[
  {
    "cmd": [
      "vpython",
      "-u",
      "RECIPE_MODULE[recipe_engine::url]/resources/pycurl.py",
      "--url",
      "https://chromium.googlesource.com/?format=TEXT",
      "--status-json",
      "/path/to/tmp/json",
      "--outfile",
      "/path/to/tmp/"
    ],
    "env_suffixes": {
      "PATH": [
        "RECIPE_REPO[depot_tools]"
      ]
    },
    "name": "GET https://chromium.googlesource.com/?format=TEXT"
  },
  {
    "cmd": [
      "python",
      "-u",
      "RECIPE_MODULE[recipe_engine::file]/resources/fileutil.py",
      "--json-output",
      "/path/to/tmp/json",
      "ensure-directory",
      "--mode",
      "0777",
      "[CACHE]/builder/w"
    ],
    "infra_step": true,
    "name": "ensure work_dir"
  },
  {
    "cmd": [
      "git_cache.py",
      "update-bootstrap",
      "https://chromium.googlesource.com/apps",
      "--cache-dir",
      "[CACHE]/builder/w",
      "--prune",
      "--reset-fetch-config",
      "--verbose",
      "--ref",
      "refs/branch-heads/*"
    ],
    "env": {
      "CHROME_HEADLESS": "1",
      "GIT_HTTP_LOW_SPEED_LIMIT": "0",
      "GIT_HTTP_LOW_SPEED_TIME": "0"
    },
    "env_suffixes": {
      "PATH": [
        "RECIPE_REPO[depot_tools]"
      ]
    },
    "name": "Updating https://chromium.googlesource.com/apps"
  },
  {
    "cmd": [
      "git_cache.py",
      "update-bootstrap",
      "https://chromium.googlesource.com/chromium/src",
      "--cache-dir",
      "[CACHE]/builder/w",
      "--prune",
      "--reset-fetch-config",
      "--verbose",
      "--ref",
      "refs/branch-heads/*"
    ],
    "env": {
      "CHROME_HEADLESS": "1",
      "GIT_HTTP_LOW_SPEED_LIMIT": "0",
      "GIT_HTTP_LOW_SPEED_TIME": "0"
    },
    "env_suffixes": {
      "PATH": [
        "RECIPE_REPO[depot_tools]"
      ]
    },
    "name": "Updating https://chromium.googlesource.com/chromium/src"
  },
  {
    "cmd": [
      "git_cache.py",
      "update-bootstrap",
      "https://chromium.googlesource.com/foo/bar",
      "--cache-dir",
      "[CACHE]/builder/w",
      "--prune",
      "--reset-fetch-config",
      "--verbose",
      "--ref",
      "refs/branch-heads/*"
    ],
    "env": {
      "CHROME_HEADLESS": "1",
      "GIT_HTTP_LOW_SPEED_LIMIT": "0",
      "GIT_HTTP_LOW_SPEED_TIME": "0"
    },
    "env_suffixes": {
      "PATH": [
        "RECIPE_REPO[depot_tools]"
      ]
    },
    "name": "Updating https://chromium.googlesource.com/foo/bar"
  },
  {
    "name": "$result"
  }
]