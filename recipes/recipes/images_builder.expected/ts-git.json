[
  {
    "cmd": [
      "python3",
      "-u",
      "RECIPE_MODULE[depot_tools::git]/resources/git_setup.py",
      "--path",
      "[CACHE]/builder/repo",
      "--url",
      "https://chromium.googlesource.com/infra/cop"
    ],
    "name": "git setup"
  },
  {
    "cmd": [
      "git",
      "fetch",
      "origin",
      "main",
      "--progress"
    ],
    "cwd": "[CACHE]/builder/repo",
    "env": {
      "PATH": "RECIPE_REPO[depot_tools]:<PATH>"
    },
    "infra_step": true,
    "name": "git fetch"
  },
  {
    "cmd": [
      "git",
      "checkout",
      "-f",
      "FETCH_HEAD"
    ],
    "cwd": "[CACHE]/builder/repo",
    "infra_step": true,
    "name": "git checkout"
  },
  {
    "cmd": [
      "git",
      "rev-parse",
      "HEAD"
    ],
    "cwd": "[CACHE]/builder/repo",
    "infra_step": true,
    "name": "read revision",
    "~followup_annotations": [
      "@@@STEP_TEXT@<br/>checked out 'deadbeef'<br/>@@@"
    ]
  },
  {
    "cmd": [
      "git",
      "clean",
      "-f",
      "-d",
      "-x"
    ],
    "cwd": "[CACHE]/builder/repo",
    "infra_step": true,
    "name": "git clean"
  },
  {
    "cmd": [
      "vpython3",
      "-u",
      "RECIPE_MODULE[recipe_engine::file]/resources/fileutil.py",
      "--json-output",
      "/path/to/tmp/json",
      "glob",
      "[CACHE]/builder/repo/build/images",
      "**/*.yaml"
    ],
    "infra_step": true,
    "name": "list build/images",
    "~followup_annotations": [
      "@@@STEP_LOG_LINE@glob@[CACHE]/builder/repo/build/images/target.yaml@@@",
      "@@@STEP_LOG_END@glob@@@"
    ]
  },
  {
    "cmd": [],
    "name": "install infra/tools/cloudbuildhelper"
  },
  {
    "cmd": [
      "vpython3",
      "-u",
      "RECIPE_MODULE[recipe_engine::file]/resources/fileutil.py",
      "--json-output",
      "/path/to/tmp/json",
      "ensure-directory",
      "--mode",
      "0777",
      "[START_DIR]/cipd_tool/infra/tools/cloudbuildhelper/git_revision%3Ad8ce7f0ecf5d56e619686c0e82313227ba05c53b"
    ],
    "infra_step": true,
    "name": "install infra/tools/cloudbuildhelper.ensure package directory",
    "~followup_annotations": [
      "@@@STEP_NEST_LEVEL@1@@@"
    ]
  },
  {
    "cmd": [
      "cipd",
      "ensure",
      "-root",
      "[START_DIR]/cipd_tool/infra/tools/cloudbuildhelper/git_revision%3Ad8ce7f0ecf5d56e619686c0e82313227ba05c53b",
      "-ensure-file",
      "infra/tools/cloudbuildhelper/${platform} git_revision:d8ce7f0ecf5d56e619686c0e82313227ba05c53b",
      "-max-threads",
      "0",
      "-json-output",
      "/path/to/tmp/json"
    ],
    "infra_step": true,
    "name": "install infra/tools/cloudbuildhelper.ensure_installed",
    "~followup_annotations": [
      "@@@STEP_NEST_LEVEL@1@@@",
      "@@@STEP_LOG_LINE@json.output@{@@@",
      "@@@STEP_LOG_LINE@json.output@  \"result\": {@@@",
      "@@@STEP_LOG_LINE@json.output@    \"\": [@@@",
      "@@@STEP_LOG_LINE@json.output@      {@@@",
      "@@@STEP_LOG_LINE@json.output@        \"instance_id\": \"resolved-instance_id-of-git_revision:d8c\", @@@",
      "@@@STEP_LOG_LINE@json.output@        \"package\": \"infra/tools/cloudbuildhelper/resolved-platform\"@@@",
      "@@@STEP_LOG_LINE@json.output@      }@@@",
      "@@@STEP_LOG_LINE@json.output@    ]@@@",
      "@@@STEP_LOG_LINE@json.output@  }@@@",
      "@@@STEP_LOG_LINE@json.output@}@@@",
      "@@@STEP_LOG_END@json.output@@@"
    ]
  },
  {
    "cmd": [
      "[START_DIR]/cipd_tool/infra/tools/cloudbuildhelper/git_revision%3Ad8ce7f0ecf5d56e619686c0e82313227ba05c53b/cloudbuildhelper",
      "version"
    ],
    "name": "cloudbuildhelper version",
    "~followup_annotations": [
      "@@@STEP_TEXT@<br/>cloudbuildhelper v6.6.6<br/><br/>CIPD package name: infra/tools/cloudbuildhelper/...<br/>CIPD instance ID:  lTJD7x...@@@"
    ]
  },
  {
    "cmd": [
      "[START_DIR]/cipd_tool/infra/tools/cloudbuildhelper/git_revision%3Ad8ce7f0ecf5d56e619686c0e82313227ba05c53b/cloudbuildhelper",
      "build",
      "[CACHE]/builder/repo/build/images/target.yaml",
      "-canonical-tag",
      "ts-2012.05.14-0",
      "-build-id",
      "https://cr-buildbucket.appspot.com/build/0",
      "-infra",
      "prod",
      "-label",
      "org.opencontainers.image.revision=deadbeef",
      "-label",
      "org.opencontainers.image.source=https://chromium.googlesource.com/infra/cop",
      "-tag",
      "latest",
      "-json-output",
      "/path/to/tmp/json"
    ],
    "name": "cloudbuildhelper build target",
    "~followup_annotations": [
      "@@@STEP_TEXT@<br/>Image: example.com/fake-registry/target:ts-2012.05.14-0<br/>Digest: sha256:34a04005bcaf206e...<br/>Tag: latest<br/>Tag: ts-2012.05.14-0@@@",
      "@@@STEP_LOG_LINE@json.output@{@@@",
      "@@@STEP_LOG_LINE@json.output@  \"context_dir\": \"/some/context/directory/for/target\", @@@",
      "@@@STEP_LOG_LINE@json.output@  \"image\": {@@@",
      "@@@STEP_LOG_LINE@json.output@    \"digest\": \"sha256:34a04005bcaf206e...\", @@@",
      "@@@STEP_LOG_LINE@json.output@    \"image\": \"example.com/fake-registry/target\", @@@",
      "@@@STEP_LOG_LINE@json.output@    \"tag\": \"ts-2012.05.14-0\"@@@",
      "@@@STEP_LOG_LINE@json.output@  }, @@@",
      "@@@STEP_LOG_LINE@json.output@  \"sources\": [], @@@",
      "@@@STEP_LOG_LINE@json.output@  \"view_build_url\": \"https://example.com/build/target\", @@@",
      "@@@STEP_LOG_LINE@json.output@  \"view_image_url\": \"https://example.com/image/target\"@@@",
      "@@@STEP_LOG_LINE@json.output@}@@@",
      "@@@STEP_LOG_END@json.output@@@",
      "@@@STEP_LINK@image@https://example.com/image/target@@@",
      "@@@STEP_LINK@build@https://example.com/build/target@@@"
    ]
  },
  {
    "name": "$result"
  }
]