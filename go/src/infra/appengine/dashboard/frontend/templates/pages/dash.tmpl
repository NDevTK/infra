<!DOCTYPE html>
<meta charset="utf-8">
<title>Chops Status Dashboard</title>
<style>
  .dash-summary {
    text-align: center;
  }
  .date-header {
    font-size: .8em;
    padding-right: 10px;
    padding-left: 10px;
    text-align: center;
  }
  .table-footer {
    height: 20px;
    font-size: .7em;
    text-align: right;
  }
  .table-footer,
  header {
    background-color: rgb(205, 223, 250);
  }
  header {
    font-size: 2em;
    height: 100px;
    width: 100%;
  }
  .light {
    height: 11px;
    padding-right: 4px;
    padding-left: 12px;
    width: 11px;
  }
  .logo {
    height: 95px;
    width: 95px;
  }
  .right {
    text-align: right;
  }
  .subtext {
    font-size: .8em;
  }
  table {
    border-collapse: collapse;
  }
  table,
  td,
  th {
    border: 1px solid rgb(205, 223, 250);
  }
  th {
    background-color: rgb(205, 223, 250);
  }
  tr {
    height: 30px;
  }
</style>
<link rel="stylesheet" type="text/css" href="/static/icons.css">
<div class="container">
  <header>
    <img class="logo" src="/static/chops-logo.png">
    Chrome Operations
  </header>
  <main>
    <h2>Chrome Operations Status Dashboard</h2>
    <p class="subtext dash-summary">
      This page shows performace information for Chrome Operations Services.
    </p>
    <p class="subtext dash-summary">
      Check this page any time to view the current status of the services listed below.
    </p>
    <p class="subtext dash-summary">
      Dates displayed on dashboard are using UTC timezone.
    </p>
    {{$dates := .Dates}}
    {{$older := .OlderDate}}
    {{$newer := .NewerDate}}
    {{if .ChopsServices}}
      <p class="subtext">Projects covered by a Service Level Agreement</p>
      <table>
        <tr>
          <th>Current Status</th>
          {{range $dates}}
            <th class="date-header">{{ . | fmtDate}}</th>
          {{end}}
        </tr>
        {{range .ChopsServices}}
        {{$name := .Service.Name}}
          <tr>
            <td class="js-{{$name}}">
              <a href={{.Service.SLA}}>{{.Service.Name}}</a>
            </td>
            {{range $dates}}
              <td class="js-{{$name}}-{{ . | fmtDate}}"></td>
            {{end}}
          </tr>
        {{end}}
        <tr class="table-footer">
          <td colspan="8">
            <span>
              <a href="?upto={{$older}}">Older</a>
            </span>
            {{if $newer}}
              <span>
                <a href="?upto={{$newer}}">Newer</a>
              </span>
            {{end}}
          </td>
        </tr>
      </table>
    {{end}}

    {{if .NonSLAServices}}
      <p class="subtext">Projects not covered by a Service Level Agreement</p>
      <table>
        <tr>
          <th>Current Status</th>
          {{range .Dates}}
            <th class="date-header">{{ . | fmtDate}}</th>
          {{end}}
        </tr>
        {{range .NonSLAServices}}
        {{$name := .Service.Name}}
          <tr>
            <td class="js-{{$name}}">
              {{.Service.Name}}
            </td>
            {{range $dates}}
              <td class="js-{{$name}}-{{ . | fmtDate}}"></td>
            {{end}}
          </tr>
        {{end}}
      </table>
    {{end}}

    <p class="subtext right">
      <i class="green circle"></i>No issues
      <i class="yellow circle"></i>Service disruption
      <i class="red circle"></i>Service outage
    </p>

  </main>
</div>
<script src="/static/add-incidents.js"></script>
<script>
  (function() {
    const RELOAD_TIME_MS = 5*60*1000;
    window.__addIncidents({{.}});
    window.setTimeout(() => {
      window.location.reload();
    }, RELOAD_TIME_MS);
  })();
</script>
